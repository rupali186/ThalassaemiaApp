<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp"
        tools:context="com.example.rupali.thalassaemiaapp.LoginActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="Sign in with : "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#5e5b5b"
            android:typeface="serif" />
        <com.google.android.gms.common.SignInButton
            android:id="@+id/login_button_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--<Button-->
            <!--android:id="@+id/login_button_google"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="5dp"-->
            <!--android:text="Login using google"-->
            <!--android:textColor="#fff" />-->
        <com.facebook.login.widget.LoginButton
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_button_facebook"/>

        <!--<Button-->
            <!--android:id="@+id/login_button_facebook"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="30dp"-->
            <!--android:padding="5dp"-->
            <!--android:background="#2e3fd1"-->
            <!--android:paddingBottom="20dp"-->
            <!--android:text="Login using facebook"-->
            <!--android:textColor="#fff" />-->

        <View
            style="@style/Divider"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="E-mail id"
            android:inputType="textEmailAddress"
            android:id="@+id/login_email"
            android:padding="10dp" />

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:hint="Contact number"-->
            <!--android:inputType="phone"-->
            <!--android:id="@+id/login_phone_no"-->
            <!--android:padding="10dp" />-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/login_password"
            android:padding="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingBottom="20dp"
                android:text="Sign In"
                android:background="@drawable/gradient_blue"
                android:id="@+id/signin_button"
                android:textColor="#fff" />
            <Button
                android:layout_marginLeft="5dp"
                android:background="@drawable/gradient_red"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingBottom="20dp"
                android:text="Sign Up"
                android:id="@+id/signup_button"
                android:textColor="#fff" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:text="Forgot your Password? "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:typeface="serif" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset_password_text"
            android:text="Reset Password"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:typeface="serif"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#475bda"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
