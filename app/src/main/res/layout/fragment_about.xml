<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment">

    <!-- TODO: Update blank fragment layout -->
   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/logo2"
           android:layout_width="110dp"
           android:layout_height="105dp"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="16dp"
           android:src="@drawable/logo_min"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/about_us"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="16dp"
           android:text="About Us"
           android:textAppearance="@style/TextAppearance.AppCompat.Large"
           android:textColor="#3E2723"
           android:textSize="40dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/logo2" />

       <TextView
           android:id="@+id/about_us_content"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginEnd="8dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="16dp"
           android:text="@string/about_content"
           android:textColor="@color/brown"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/about_us" />

       <TextView
           android:id="@+id/contact_us"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="24dp"
           android:layout_marginTop="24dp"
           android:text="Contact Us"
           android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/about_us_content" />

       <ImageView
           android:id="@+id/insta"
           android:layout_width="49dp"
           android:layout_height="66dp"
           android:layout_marginBottom="16dp"
           android:layout_marginStart="16dp"
           android:layout_marginTop="16dp"
           android:src="@drawable/instagram"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/contact_us" />

       <ImageView
           android:id="@+id/twitter"
           android:layout_width="48dp"
           android:layout_height="49dp"
           android:layout_marginBottom="8dp"
           android:layout_marginStart="16dp"
           android:layout_marginTop="8dp"
           android:src="@drawable/twitter"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toEndOf="@+id/insta"
           app:layout_constraintTop_toBottomOf="@+id/contact_us" />


   </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>